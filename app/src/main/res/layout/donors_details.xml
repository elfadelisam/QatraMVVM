<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".DetailsDonors">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:paddingTop="0dp"
                android:src="@drawable/volunteers" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:text="Name"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="#d6cece" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/ic_phone_24"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="@string/phone"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/phone"
                                android:textColor="#686868"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/ic_address_24"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="@string/address"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/address"
                                android:textColor="#686868"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/ic_age_24"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="@string/age"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/age"
                                android:textColor="#686868"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/ic_group_24"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="@string/group"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtBloodType"
                                android:textColor="#686868"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/ic_date_24"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="@string/last_donate"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txt_last_donation_date"
                                android:textColor="#686868"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/ic_profile_24"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="@string/gender"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/gender"
                                android:textColor="#686868"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/ic_email_24"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="@string/email"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/email"
                                android:textColor="#686868"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>